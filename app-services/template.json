{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "sites_default_name_azure": {
            "type": "String"
        },
        "sites_default_name_public": {
            "type": "String"
        },
        "sites_architecture_prefix": {
            "type": "String"
        },
        "serverfarms_main_name": {
            "type": "String"
        },
        "serverfarms_unstable_name": {
            "type": "String"
        }
    },
    "variables": {
        "serverfarms_main_id": "[resourceId('Microsoft.Web/serverFarms', parameters('serverfarms_main_name'))]",
        "serverfarms_unstable_id": "[resourceId('Microsoft.Web/serverFarms', parameters('serverfarms_unstable_name'))]",
        "components_default_site_insights_name": "[concat(parameters('sites_default_name_azure'), '-insights')]",
        "sites_core_x64_name": "[concat(parameters('sites_architecture_prefix'), 'core-x64')]",
        "sites_core_x64_profiled_name": "[concat(parameters('sites_architecture_prefix'), 'core-x64-profiled')]",
        "sites_netfx_name": "[concat(parameters('sites_architecture_prefix'), 'netfx')]"
    },
    "resources": [
        {
            "type": "microsoft.insights/components",
            "apiVersion": "2018-05-01-preview",
            "name": "[variables('components_default_site_insights_name')]",
            "location": "eastus",
            "kind": "other",
            "properties": {
                "Application_Type": "other",
                "RetentionInDays": 90,
                "publicNetworkAccessForIngestion": "Enabled",
                "publicNetworkAccessForQuery": "Enabled"
            }
        },

        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "name": "[parameters('sites_default_name_azure')]",
            "location": "East US",
            "tags": {
                "[concat('hidden-related:', variables('serverfarms_main_id'))]": "empty"
            },
            "kind": "app",
            "properties": {
                "enabled": true,
                "hostNameSslStates": [
                    {
                        "name": "[parameters('sites_default_name_public')]",
                        "sslState": "SniEnabled",
                        "hostType": "Standard"
                    },
                    {
                        "name": "[concat(parameters('sites_default_name_azure'), '.azurewebsites.net')]",
                        "sslState": "Disabled",
                        "hostType": "Standard"
                    },
                    {
                        "name": "[concat(parameters('sites_default_name_azure'), '.scm.azurewebsites.net')]",
                        "sslState": "Disabled",
                        "hostType": "Repository"
                    }
                ],
                "serverFarmId": "[variables('serverfarms_main_id')]"
            }
        },
        {
            "type": "Microsoft.Web/sites/hostNameBindings",
            "apiVersion": "2018-11-01",
            "name": "[concat(parameters('sites_default_name_azure'), '/', parameters('sites_default_name_public'))]",
            "location": "East US",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('sites_default_name_azure'))]"
            ],
            "properties": {
                "siteName": "[parameters('sites_default_name_azure')]",
                "hostNameType": "Verified",
                "sslState": "SniEnabled"
            }
        },
        {
            "type": "Microsoft.Web/sites/hostNameBindings",
            "apiVersion": "2018-11-01",
            "name": "[concat(parameters('sites_default_name_azure'), '/', parameters('sites_default_name_azure'), '.azurewebsites.net')]",
            "location": "East US",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('sites_default_name_azure'))]",
                "[resourceId('Microsoft.Web/sites/hostNameBindings', parameters('sites_default_name_azure'), parameters('sites_default_name_public'))]"
            ],
            "properties": {
                "siteName": "[parameters('sites_default_name_azure')]",
                "hostNameType": "Verified"
            }
        },
        {
            "type": "Microsoft.Web/sites/config",
            "apiVersion": "2018-11-01",
            "name": "[concat(parameters('sites_default_name_azure'), '/web')]",
            "location": "East US",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('sites_default_name_azure'))]"
            ],
            "tags": {
                "[concat('hidden-related:', variables('serverfarms_main_id'))]": "empty"
            },
            "properties": {
                "netFrameworkVersion": "v5.0",
                "publishingUsername": "[concat('$', parameters('sites_default_name_azure'))]",
                "use32BitWorkerProcess": true,
                "webSocketsEnabled": true,
                "alwaysOn": true,
                "managedPipelineMode": "Integrated",
                "virtualApplications": [
                    {
                        "virtualPath": "/",
                        "physicalPath": "site\\wwwroot",
                        "preloadEnabled": true
                    }
                ],
                "ipSecurityRestrictions": [
                    {
                        "ipAddress": "Any",
                        "action": "Allow",
                        "priority": 1,
                        "name": "Allow all",
                        "description": "Allow all access"
                    }
                ],
                "scmIpSecurityRestrictions": [
                    {
                        "ipAddress": "Any",
                        "action": "Allow",
                        "priority": 1,
                        "name": "Allow all",
                        "description": "Allow all access"
                    }
                ],
                "http20Enabled": true
            }
        },
        {
            "type": "Microsoft.Web/sites/siteextensions",
            "apiVersion": "2018-11-01",
            "name": "[concat(parameters('sites_default_name_azure'), '/letsencrypt')]",
            "location": "East US",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('sites_default_name_azure'))]"
            ]
        },

        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "name": "[variables('sites_core_x64_name')]",
            "location": "East US",
            "kind": "app",
            "properties": {
                "enabled": true,
                "hostNameSslStates": [
                    {
                        "name": "[concat(variables('sites_core_x64_name'), '.azurewebsites.net')]",
                        "sslState": "Disabled",
                        "hostType": "Standard"
                    },
                    {
                        "name": "[concat(variables('sites_core_x64_name'), '.scm.azurewebsites.net')]",
                        "sslState": "Disabled",
                        "hostType": "Repository"
                    }
                ],
                "serverFarmId": "[variables('serverfarms_main_id')]"
            }
        },
        {
            "type": "Microsoft.Web/sites/hostNameBindings",
            "apiVersion": "2018-11-01",
            "name": "[concat(variables('sites_core_x64_name'), '/', variables('sites_core_x64_name'), '.azurewebsites.net')]",
            "location": "East US",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', variables('sites_core_x64_name'))]"
            ],
            "properties": {
                "siteName": "[variables('sites_core_x64_name')]",
                "hostNameType": "Verified"
            }
        },
        {
            "type": "Microsoft.Web/sites/config",
            "apiVersion": "2018-11-01",
            "name": "[concat(variables('sites_core_x64_name'), '/web')]",
            "location": "East US",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', variables('sites_core_x64_name'))]"
            ],
            "properties": {
                "netFrameworkVersion": "v5.0",
                "publishingUsername": "[concat('$', variables('sites_core_x64_name'))]",
                "use32BitWorkerProcess": false,
                "webSocketsEnabled": true,
                "alwaysOn": false,
                "managedPipelineMode": "Integrated",
                "virtualApplications": [
                    {
                        "virtualPath": "/",
                        "physicalPath": "site\\wwwroot",
                        "preloadEnabled": false
                    }
                ],
                "ipSecurityRestrictions": [
                    {
                        "ipAddress": "Any",
                        "action": "Allow",
                        "priority": 1,
                        "name": "Allow all",
                        "description": "Allow all access"
                    }
                ],
                "scmIpSecurityRestrictions": [
                    {
                        "ipAddress": "Any",
                        "action": "Allow",
                        "priority": 1,
                        "name": "Allow all",
                        "description": "Allow all access"
                    }
                ],
                "http20Enabled": true
            }
        },

        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "name": "[variables('sites_core_x64_profiled_name')]",
            "location": "East US",
            "kind": "app",
            "properties": {
                "enabled": true,
                "hostNameSslStates": [
                    {
                        "name": "[concat(variables('sites_core_x64_profiled_name'), '.azurewebsites.net')]",
                        "sslState": "Disabled",
                        "hostType": "Standard"
                    },
                    {
                        "name": "[concat(variables('sites_core_x64_profiled_name'), '.scm.azurewebsites.net')]",
                        "sslState": "Disabled",
                        "hostType": "Repository"
                    }
                ],
                "serverFarmId": "[variables('serverfarms_unstable_id')]"
            }
        },
        {
            "type": "Microsoft.Web/sites/hostNameBindings",
            "apiVersion": "2018-11-01",
            "name": "[concat(variables('sites_core_x64_profiled_name'), '/', variables('sites_core_x64_profiled_name'), '.azurewebsites.net')]",
            "location": "East US",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', variables('sites_core_x64_profiled_name'))]"
            ],
            "properties": {
                "siteName": "[variables('sites_core_x64_profiled_name')]",
                "hostNameType": "Verified"
            }
        },
        {
            "type": "Microsoft.Web/sites/config",
            "apiVersion": "2018-11-01",
            "name": "[concat(variables('sites_core_x64_profiled_name'), '/web')]",
            "location": "East US",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', variables('sites_core_x64_profiled_name'))]"
            ],
            "properties": {
                "netFrameworkVersion": "v5.0",
                "publishingUsername": "[concat('$', variables('sites_core_x64_profiled_name'))]",
                "use32BitWorkerProcess": false,
                "webSocketsEnabled": true,
                "alwaysOn": false,
                "managedPipelineMode": "Integrated",
                "virtualApplications": [
                    {
                        "virtualPath": "/",
                        "physicalPath": "site\\wwwroot",
                        "preloadEnabled": false
                    }
                ],
                "ipSecurityRestrictions": [
                    {
                        "ipAddress": "Any",
                        "action": "Allow",
                        "priority": 1,
                        "name": "Allow all",
                        "description": "Allow all access"
                    }
                ],
                "scmIpSecurityRestrictions": [
                    {
                        "ipAddress": "Any",
                        "action": "Allow",
                        "priority": 1,
                        "name": "Allow all",
                        "description": "Allow all access"
                    }
                ],
                "http20Enabled": true
            }
        },

        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "name": "[variables('sites_netfx_name')]",
            "location": "East US",
            "kind": "app",
            "properties": {
                "enabled": true,
                "hostNameSslStates": [
                    {
                        "name": "[concat(variables('sites_netfx_name'), '.azurewebsites.net')]",
                        "sslState": "Disabled",
                        "hostType": "Standard"
                    },
                    {
                        "name": "[concat(variables('sites_netfx_name'), '.scm.azurewebsites.net')]",
                        "sslState": "Disabled",
                        "hostType": "Repository"
                    }
                ],
                "serverFarmId": "[variables('serverfarms_main_id')]"
            }
        },
        {
            "type": "Microsoft.Web/sites/hostNameBindings",
            "apiVersion": "2018-11-01",
            "name": "[concat(variables('sites_netfx_name'), '/', variables('sites_netfx_name'), '.azurewebsites.net')]",
            "location": "East US",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', variables('sites_netfx_name'))]"
            ],
            "properties": {
                "siteName": "[variables('sites_netfx_name')]",
                "hostNameType": "Verified"
            }
        },
        {
            "type": "Microsoft.Web/sites/config",
            "apiVersion": "2018-11-01",
            "name": "[concat(variables('sites_netfx_name'), '/web')]",
            "location": "East US",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', variables('sites_netfx_name'))]"
            ],
            "properties": {
                "netFrameworkVersion": "v4.0",
                "publishingUsername": "[concat('$', variables('sites_netfx_name'))]",
                "use32BitWorkerProcess": true,
                "webSocketsEnabled": true,
                "alwaysOn": false,
                "managedPipelineMode": "Integrated",
                "virtualApplications": [
                    {
                        "virtualPath": "/",
                        "physicalPath": "site\\wwwroot",
                        "preloadEnabled": false
                    }
                ],
                "ipSecurityRestrictions": [
                    {
                        "ipAddress": "Any",
                        "action": "Allow",
                        "priority": 1,
                        "name": "Allow all",
                        "description": "Allow all access"
                    }
                ],
                "scmIpSecurityRestrictions": [
                    {
                        "ipAddress": "Any",
                        "action": "Allow",
                        "priority": 1,
                        "name": "Allow all",
                        "description": "Allow all access"
                    }
                ],
                "http20Enabled": true
            }
        }
    ]
}